# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Ignore paths
[/vendor/**]
charset = none
end_of_line = none
insert_final_newline = none
indent_style = none
indent_size = none

[**/*.go]
charset = utf-8
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
